<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title Adoptuj Pieska</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

	<style>
		.my-custom-navbar {
			background-color: #86A612;
		}

		.navbar-brand {
			color: white;
			font-weight: bold;
		}

		.nav-link {
			color: white;
		}
	</style>

</head>
<body>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm my-custom-navbar">
		<div class="container">
			@Html.ActionLink("Adoptuj Pieska", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			<button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Przełącz nawigację" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					<li>@Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Pieski", "Index", "Pieski/All", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Schroniska", "Shelters", "User", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Blog", "Blog", "Blog", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Darowizny", "Donate", "Home", new { area = "" }, new { @class = "nav-link" })</li>
					@Html.Partial("_Forms")
				</ul>
				@Html.Partial("_LoginPart")
			</div>
		</div>
	</nav>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
