@{
    ViewBag.Title = "Adoptuj pieska";
}
@model AdoptujPieska.Models.User
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>

<body>
    <style>
        body {
            width: 100%;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            min-height: 100vh;
            font-family: "Poppins", sans-serif;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
        }

        a {
            text-decoration: none;
        }

        .header header {
            width: 100%;
            background: url("baner.png") no-repeat 50% 20% / cover;
            min-height: calc(100px + 15vw);
        }

        .header .container {
            display: flex;
            justify-content: space-between;
        }

            .header .container .left_col {
                padding: 25px 20px;
                text-align: center;
                max-width: 350px;
                position: relative;
                margin: 0 auto;
                flex: 1;
            }

                .header .container .left_col .zdjecie {
                    position: absolute;
                    top: 50px;
                    left: 50%;
                    transform: translatex(-50%);
                }

                    .header .container .left_col .zdjecie img {
                        width: 120px;
                        height: 120px;
                        object-fit: cover;
                        border-radius: 50%;
                        display: block;
                        box-shadow: 1px 3px 12px rgba(0, 0, 0, 0.18);
                    }

                .header .container .left_col h2 {
                    margin-top: 110px;
                    font-weight: 600;
                    font-size: 22px;
                    margin-bottom: 5px;
                }

                .header .container .left_col p {
                    font-size: 0.9rem;
                    color: #818181;
                    margin: 0;
                }

                .header .container .left_col .ile {
                    justify-content: space-evenly;
                    position: relative;
                    margin: 35px 0;
                }

                    .header .container .left_col .ile li {
                        display: flex;
                        flex-direction: column;
                        color: #818181;
                        font-size: 0.9rem;
                    }

                        .header .container .left_col .ile li span {
                            color: #1d1d1d;
                            font-weight: 600;
                        }

                    .header .container .left_col .ile:after {
                        position: absolute;
                        content: "";
                        bottom: -16px;
                        display: block;
                        background: #cccccc;
                        height: 1px;
                        width: 100%;
                    }

            .header .container .content p {
                font-size: 1rem;
                color: #1d1d1d;
                line-height: 1.8em;
            }

            .header .container .content ul {
                gap: 30px;
                justify-content: center;
                align-items: center;
                margin-top: 25px;
            }

                .header .container .content ul li {
                    display: flex;
                }

                .header .container .content ul i {
                    font-size: 1.3rem;
                }

            .header .container .right_col {
                flex: 2;
                padding: 30px;
            }

                .header .container .right_col img {
                    width: 100%;
                    height: auto;
                }
    </style>

    <div class="header">
        @if (Session["UserName"] != null)
        {
            <p>
                @Html.ActionLink("Edytuj profil", "Edit")
            </p>
        }
	<div class="container">
		<div class="left_col">
			<br></br>
			<div class="zdjecie">
				<img src="~/Pictures/Logo.png" alt=" " />
				<span></span>
			</div>

			<h2>@Session["UserName"]</h2>
			@if (Session["UserName"] != null && (int)Session["Role"] == 1)
			{
				<p>Schronisko dla psów</p>
				<p>adoptuj.pieska@gmail.com</p>

				<ul class="ile">
					<li><span>75</span>Dom znalazło</li>
				</ul>

				<div class="content">
					<p>
						Pomóż naszym czworonożnym przyjacielom znaleźć ciepły dom!
						Podaruj im miłość na jaką zasługują!
						Pokaż mu, że jest życie poza schroniskiem. Nie pozwól,
						aby resztę lat życia, które mu pozostały, spędził w zimnym,
						betonowym boksie. Jeśli okażesz mu trochę serca, on odpłaci Ci z nawiązką.
					</p>
				</div>
			}
			else
			{
				<p>User</p>
				<!--if (Session["UserName"] != null && (int)Session["Role"] == 2)
		{
			<h3>Polubione psy:</h3>
			<ul>
				foreach (var like in Model.Like)
				{
					<li>like.LikeDog</li>
				}
			</ul>
		}-->

			}

		</div>
		<div class="right_col">

			<!--<img src="path/to/image1.jpg" alt="Image 1" />
	<img src="path/to/image2.jpg" alt="Image 2" />
	<img src="path/to/image3.jpg" alt="Image 3" />-->
		</div>
		</div>
    </div>

</body>

</html>
