@model AdoptujPieska.Models.Blog
@{
    ViewBag.Title = "Post";
}
<style>
    .content-frame {
        width: 1000px;
        overflow: hidden;
    }

    h1 {
        font-size: 35px;
        color: #333;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .date {
        font-size: 12px;
        color: #888;
        margin-bottom: 10px;
    }

    .image-container {
        width: 900px;
        height: 400px;
        border: none;
        margin-bottom: 10px;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .content {
        font-size: 16px;
        line-height: 1.5;
        margin-top: 20px;
    }

    .comments {
        width: 1000px;
        margin-left: 0;
        margin-top: 10px;
    }

    .comment {
        background-color: #f0f0f0;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
        display: flex;
        align-items: flex-start;
    }

    .user-info {
        display: flex;
        align-items: center;
    }

    .user-image {
        margin-right: 10px;
    }

        .user-image img {
            width: 70px;
            height: auto;
        }

    .user-details {
        flex: 1;
    }

    .username {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .date {
        font-size: 12px;
        color: #888;
    }

    .comment-content {
        flex: 1;
        margin-left: 25px;
    }

    .com {
        margin-top: 30px;
        font-weight: bold;
        font-size: 24px;
    }

    .button-group {
        margin-top: 10px;
        margin-right: 10px;
        display: flex;
        align-items: center;
        border:none;
    }

    .custom-green {
        background-color: #86A612;
        border: none;
        margin-right: 10px;
    }

</style>

@using (Html.BeginForm("Post", "Blog", new { id = Model.Id }))
{
    <h1>@Html.DisplayFor(model => model.title)</h1>
    <div class="date">Data dodania: @Html.DisplayFor(model => model.date)</div>

    if (Session["Role"] != null && (int)Session["Id"] == Model.author)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success custom-green" })
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Czy na pewno chcesz usunąć ten wpis?');" })
    }


    <div class="image-container">
        <img src="@Html.DisplayFor(model => model.photo)" alt="Zdjęcie" />
    </div>

    <div class="content-frame">
        <div class="content">
            @Html.DisplayFor(model => model.content)
        </div>
    </div>
}

<div class="com">
    <span>Komentarze </span>
</div>

<div class="comments">
    @foreach (var comment in Model.Comments)
    {
        <div class="comment">
            <div class="user-info">
                <div class="user-image">
                    <img src="@comment.User.PHOTO" alt="Zdjęcie użytkownika" />
                </div>
                <div class="user-details">
                    <div class="username">@comment.User.USERNAME</div>
                    <div class="date">@comment.date</div>
                </div>
            </div>
            <div class="comment-content">
                @comment.comment
            </div>
        </div>
    }

    @if (Session["Role"] != null && ((int)Session["Role"] == 1 || (int)Session["Role"] == 2))
    {
        using (Html.BeginForm("AddComment", "Blog", new { id = Model.Id }, FormMethod.Post, new { @class = "comment-form" }))
        {
            <input type="text" name="comm" />
            <input type="submit" value="Dodaj komentarz" />
        }
    }
</div>
