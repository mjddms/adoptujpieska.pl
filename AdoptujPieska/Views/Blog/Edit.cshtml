@model AdoptujPieska.Models.Blog

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Blog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label font-weight-bold">Tytuł:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.title, new { @class = "form-control", @style = "height: auto; min-height: 50px; max-height: 200px; resize: vertical; width: 90%;" })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label font-weight-bold">Zdjęcie:</label>
                </div>
                <div class="col-md-10">
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.photo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label font-weight-bold">Treść:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.content, new { @class = "form-control", @style = "height: 300px; width: 90%;" })
                    @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz zmiany" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<style>
    .form-group {
        margin-bottom: 15px;
    }
</style>

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>
