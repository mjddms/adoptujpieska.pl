<h1>Wszystkie pieski</h1>

<style>
    .kafle-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
    }

    .kafel {
        width: 300px;
        height: 300px;
        overflow: hidden;
        position: relative;
    }

        .kafel img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center center;
            position: absolute;
            top: 0;
            left: 0;
        }

        .kafel p {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 10px;
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            text-align: center;
            margin: 0;
        }
</style>




@if (Session["UserName"] != null)
{
    <p>
        @Html.ActionLink("+ Dodaj Pieska", "Add")
    </p>
}

<body>

    <div class="kafle-container">
        @foreach (var piesek in ViewBag.Pieski)
        {
            <div class="kafel">
                <a href="@Url.Action("Profile", new { id = piesek.Id })">
                    <img src="@piesek.Zdjecie" alt="Zdjęcie psa">
                </a>
                <p>@piesek.Imie</p>
            </div>
        }
    </div>


</body>
