@model AdoptujPieska.Models.Pieski


<style>

	.profil-details dt {
		float: left;
		clear: both;
		width: 100px;
		font-weight: bold;
	}

	.profil-details dd {
		margin-left: 120px;
		margin-bottom: 10px;
	}

	.profil-container {
		display: flex;
		align-items: flex-start;
		padding: 20px;
		background-color: #fff;
		border: 1px solid #ccc;
		border-radius: 5px;
		box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
		max-width: 800px;
		margin: 0 auto;
	}

	.profil-img {
		width: 300px;
		height: 500px;
		margin-right: 20px;
		overflow: hidden;
		flex-shrink: 0;
	}

		.profil-img img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			object-position: center center;
		}

	.profil-details {
		flex-grow: 1;
	}

		.profil-details .all-img img{
			width: 300px;
			height: 200px;
		}
		.profil-details h1 {
			font-size: 38px;
			font-weight: bold;
			margin-bottom: 20px;
		}

		.profil-details p {
			font-size: 16px;
			margin: 5px 0;
		}

		.profil-details .opis {
			font-size: 16px;
			margin-top: 20px;
		}

	.btn-edit {
		display: inline-block;
		padding: 8px 13px;
		background-color: black;
		color: white;
		text-decoration: none;
		border: none;
		cursor: pointer;
		border-radius: 5px;
		margin-top: auto;
		margin-right: 10px;
		transition: transform 0.2s ease-in-out;
	}

		.btn-edit:hover {
			transform: scale(1.05);
		}

	.btn-delete {
		display: inline-block;
		padding: 8px 13px;
		background-color: black;
		color: white;
		text-decoration: none;
		border: none;
		cursor: pointer;
		border-radius: 5px;
		margin-top: auto;
		margin-left: 10px;
		transition: transform 0.2s ease-in-out;
	}

		.btn-delete:hover {
			transform: scale(1.05);
		}
</style>

<div class="profil-container">
	<div class="profil-img">
		<img src="@Model.Zdjecie" alt="Zdjêcie psa">
	</div>
	<div class="profil-details">

		<h1><dd>@Model.Imie</dd></h1>
		<dt>Rasa:</dt>
		<dd>@Model.Rasa</dd>
		<dt>Wiek:</dt>
		<dd>@Model.Wiek</dd>
		<dt>Plec:</dt>
		<dd>@(Model.Plec.HasValue ? (Model.Plec.Value ? "Samica" : "Samiec") : "Nieznana")</dd>
		<dt>Aktywny:</dt>
		<dd>@(Model.Aktywny.HasValue ? (Model.Aktywny.Value ? "Tak" : "Nie") : "Nieznane")</dd>
		<dt>Lubi dzieci:</dt>
		<dd>@(Model.Lubi_dzieci.HasValue ? (Model.Lubi_dzieci.Value ? "Tak" : "Nie") : "Nieznane")</dd>
		<dt>Lubi psy:</dt>
		<dd>@(Model.Lubi_psy.HasValue ? (Model.Lubi_psy.Value ? "Tak" : "Nie") : "Nieznane")</dd>
		<dt>Opis:</dt>
		<dd>@Model.Opis</dd>
		<td>@Html.ActionLink("Dodaj zdjecia", "Photos", new { id = Model.Id }, new { @class = "btn-edit" })</td>
		<div class="all-img">

				@foreach (var photo in ViewBag.Photos)
				{

				<img src="@photo.Photos" />

				}
			

		</div>
			</div>
			@if (Session["UserName"] != null)
			{
				<td>@Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn-edit" })</td>
				<td>@Html.ActionLink("Usuñ", "Delete", new { id = Model.Id }, new { onclick = "return confirm('Czy na pewno chcesz usun¹æ tego psa?')", @class = "btn-delete" })</td>
			}

</div>


